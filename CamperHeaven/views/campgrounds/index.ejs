<%- layout('layouts/boilerplate') %>

    <body>
        <h1>All Campgrounds</h1>
        <ul>
            <% for(let i of campgrounds) {%>
                <div class="card" mb-3>
                    <div class="row">
                        <div class="col-md-4">
                            <% if(i.images.length) { %>
                                <img class="img-fluid" alt="" src="<%= i.images[0].url %>">
                                <% } else { %>
                                    <img src="https://res.cloudinary.com/dvda6on2q/image/upload/v1689506367/CamperHeaven/rdajz1jdd8olauuvwhng.jpg"
                                        alt="" class="img-fluid">
                                    <% } %>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= i.title %>
                                </h5>
                                <p class="card-text">
                                    <%= i.description %>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <%= i.location %>
                                    </small>
                                </p>
                                <a class="btn btn-primary" href="/campgrounds/<%= i._id %>">View <%= i.title %></a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </ul>
    </body>

    </html>