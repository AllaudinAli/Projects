<%- layout('layouts/boilerplate') %>

    <body>
        <h1>All Campgrounds</h1>
        <div>
            <a href="/campgrounds/new">Add Campground</a>
        </div>
        <ul>
            <% var x=1; %>
                <% for(let i of campgrounds) {%>
                    <li>
                        <a href="/campgrounds/<%=i._id%>">
                            <%= i.title %>
                        </a>
                    </li>
                    <% } %>
        </ul>
    </body>

    </html>